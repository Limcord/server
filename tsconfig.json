{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": false,
      "experimentalDecorators": true,
      "outDir": "./lib",
      "baseUrl": ".",
      "suppressImplicitAnyIndexErrors": false,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "sourceMap": false,
      "strict": false,
      "esModuleInterop": true,
      "jsx": "react",
      "moduleResolution": "Node",
      "typeRoots": ["./src/@types"],
      "lib": [
        "dom", "es6"
      ]
    },
    "include": [
      "src/*",
      "typings"
    ]
  }